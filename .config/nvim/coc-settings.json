{
	// Basic configurations
	"suggest.noselect": true,

	// Optimization
	"suggest.timeout": 5000,
	"signature.triggerSignatureWait": 1000,

	// Prettier
	"prettier.eslintIntegration": true,
	"prettier.tabWidth": 4,

	// Snippets
	"snippet.statusText": "(On Snippet)",
	"snippet.highlight": true,
	"snippets.ultisnips.directories":[
		"UltiSnips",
		"ultisnips",
		".vim/UltiSnips",
		".vim/ultisnips"
	],

	// Extends filetype's snippets with other filetypes
	"snippets.extends":{
		"cpp": ["c"],
		"javascriptreact": ["javascript"],
		"typescript": ["javascript"]
	},

	// Coc lists configuration
	"list.normalMappings": {
		"t": "action:tabe",
		"v": "action:vsplit",
		"s": "action:split",
		"d": "expr:GetDeleteAction"
	},

	"list.insertMappings": {
		"<C-t>": "action:tabe",
		"<C-w>": "command:wincmd k"
	},

	// Completion Labels
	"suggest.completionItemKindLabels": {

		"keyword": "\uf1de",
		"variable": "\ue79b",
		"value": "\uf89f",
		"operator": "\u03a8",
		"function": "\u0192",
		"reference": "\ufa46",
		"constant": "\uf8fe",
		"method": "\uf09a",
		"struct": "\ufb44",
		"class": "\uf0e8",
		"interface": "\uf417",
		"text": "\ue612",
		"enum": "\uf435",
		"enumMember": "\uf02b",
		"module": "\uf40d",
		"color": "\ue22b",
		"property": "\ue624",
		"field": "\uf9be",
		"unit": "\uf475",
		"event": "\ufacd",
		"file": "\uf723",
		"folder": "\uf114",
		"snippet": "\ue60b",
		"typeParameter": "\uf728",
		"default": "\uf29c"
	},

	// Language
	"languageserver": {

		"ccls": {

			"command": "ccls",
			"filetypes": [
				"c",
				"cpp",
				"cuda",
				"objc",
				"objcpp"
			],

			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".vim/",
				".git/",
				".hg/"
			],

			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls-cache"
				},

				"client": {
					"snippetSupport":true
				}
			}
		}
	},

	// Python
	"python.linting.pylintEnabled": false,
	"python.linting.pydocstyleEnabled": true,
	"python.linting.pydocstylePath": "~/.local/bin/pydocstyle",
	"python.linting.enabled": true
}
